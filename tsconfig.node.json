{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    // "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    // "skipLibCheck": true,
    // 补充如下配置
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
